<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#f9f9f9"
        android:orientation="vertical">
        <!--==============top=================-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50">

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:scaleType="fitXY"
                android:layout_marginLeft="@dimen/dp_10"
                android:src="@mipmap/commodity_x"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_18"
                android:layout_alignParentRight="true"
                android:padding="@dimen/dp_13"
                />

            <TextView
                android:id="@+id/tv_passText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="@dimen/dp_15"
                android:textColor="#000000"
                android:text="请输入支付密码"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_alignParentBottom="true"
                android:background="#dddddd"/>

        </RelativeLayout>
        <!--==============pass=================-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_35"
            android:layout_marginRight="@dimen/dp_35"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/shape_payview_stroke_gray"
            android:orientation="horizontal"
            android:weightSum="6">
            <!--======1======-->
            <TextView
                android:id="@+id/tv_pass1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:inputType="numberPassword"
                android:gravity="center"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:textSize="@dimen/dp_42"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#CCCCCC"/>
            <!--=====2=====-->
            <TextView
                android:id="@+id/tv_pass2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:inputType="numberPassword"
                android:gravity="center"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:textSize="@dimen/dp_42" />

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="match_parent"
                android:background="#CCCCCC"/>

            <!--=====3=====-->
            <TextView
                android:id="@+id/tv_pass3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:inputType="numberPassword"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:textSize="@dimen/dp_42"
                android:gravity="center"/>

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="match_parent"
                android:background="#CCCCCC"/>
            <!--=====4=======-->
            <TextView
                android:id="@+id/tv_pass4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:inputType="numberPassword"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:textSize="@dimen/dp_42"
                android:gravity="center"/>

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="match_parent"
                android:background="#CCCCCC"/>
            <!--=======5==========-->
            <TextView
                android:id="@+id/tv_pass5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:inputType="numberPassword"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:textSize="@dimen/dp_42"
                android:gravity="center"/>

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="match_parent"
                android:background="#CCCCCC"/>
            <!--=========6=======-->
            <TextView
                android:id="@+id/tv_pass6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:inputType="numberPassword"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:textSize="@dimen/dp_42"
                android:gravity="center"/>
        </LinearLayout>
        <!--==============forget=================-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_15">

            <TextView
                android:id="@+id/tv_forget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="忘记密码?"
                android:textSize="@dimen/dp_12"
                android:textColor="#00a5ff"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>
        <!--==============输入键盘=================-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_27"
            android:background="#e3e7ee">

            <GridView
                android:id="@+id/gv_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_1"
                android:horizontalSpacing="@dimen/dp_1"
                android:listSelector="#e3e7ee"
                android:numColumns="3"
                android:verticalSpacing="@dimen/dp_1" />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
